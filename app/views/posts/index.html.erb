<%= render "nav" %>

<div class="columns">
	<div id="posts">
		<%= link_to "All Tags", posts_path %><br><br>
		<%= render @posts.reverse %>
	</div>

	<div id="news">
		<% @news.each do |article| %>
			<p><%=link_to article["title"], article["url"]%></p>
			<p><%=article["description"]%></p>
			<p>by <%=article["author"]%></p><br>
		<% end %>
	</div>
</div>


