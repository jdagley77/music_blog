<div class="columns">
	<div id="posts">
		<h2>Articles</h2>
		<%= link_to "All Tags", posts_path, class: 'btn btn-primary btn-xs' %><br><br>
		<%= render @posts %>
 			<%= will_paginate @posts, renderer: BootstrapPagination::Rails, previous_label: "Newer", next_label: "Older" %>		
	</div>

	<div id="news">
	<h2>News</h2>
		<% @news.each do |article| %>
			<p><%=link_to article["title"], article["url"]%></p>
			<p><%=article["description"]%></p>
			<p>by <%=article["author"]%></p><br>
		<% end %>
	</div>
</div>


